(version 1)
(rule power_clearance
 (constraint clearance (min 10mil))
 (condition "A.Type == 'Track' && B.Type == 'Track' && A.NetClass == 'Power' && B.NetClass == 'Power'")
)
(rule power_zone_clearance
 (constraint clearance (min 12mil) (opt 18mil))
 (condition "A.Type == 'Zone' && A.NetClass == 'Power' && B.NetClass == 'Power'")
)
